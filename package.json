{
  "name": "ApiTests",
  "version": "1.0.0",
  "description": "JS Api automation starter kit",
  "scripts": {
    "pretest": "rm -rf logs/*.log && rm -rf mochawesome-report/*",
    "test": "mocha --config './.mocharc.js'",
    "start-server": "json-server --watch server/req.json",
    "prettier:check": "prettier --check '**/*.js'",
    "prettier:write": "prettier --write '**/*.js'",
    "validate": "eslint '**/*.js'",
    "clean": "rm -rf logs/*.log mochawesome-report/* node_modules/* package-lock.json .idea"
  },
  "keywords": [],
  "author": "Manpreet",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "json-server": "^0.17.0",
    "jsonpath": "^1.1.1",
    "mocha": "^9.1.2",
    "mochawesome": "^6.3.1",
    "mochawesome-report-generator": "^5.2.0",
    "should": "^13.2.3",
    "supertest": "^6.1.6"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/plugin-transform-runtime": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@babel/register": "^7.15.3",
    "babel-plugin-module-resolver": "^4.1.0",
    "chai": "^4.3.4",
    "chai-json-schema": "^1.5.1",
    "eslint": "^8.0.1",
    "husky": "^7.0.2",
    "lint-staged": "^11.2.3",
    "prettier": "^2.4.1",
    "winston": "^3.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.js": [
      "prettier --write '**/*.js'"
    ]
  }
}
